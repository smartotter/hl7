  <init-param>
    <param-name>jdbcDriverName</param-name>
    <param-value>com.microsoft.jdbc.sqlserver.SQLServerDriver</param-value>
  </init-param>
  <init-param>
    <param-name>jdbcConnectURL</param-name>
    <param-value>jdbc:microsoft:sqlserver://127.0.0.1:1433;ServerName=C39HR61;DatabaseName=info_src;User=ctn;Password=ctn</param-value>
