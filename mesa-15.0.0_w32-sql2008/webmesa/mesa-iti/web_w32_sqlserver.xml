<web-app>
 <servlet>
  <servlet-name>InformationSource</servlet-name>
  <servlet-class>edu.wustl.mir.mesaweb.rid.InformationSource</servlet-class>
  <init-param>
     <param-name>logPath</param-name>
     <param-value>C:\mesa\logs\info_src.log</param-value>
