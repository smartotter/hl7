 </servlet>

 <servlet>
  <servlet-name>IHERetrieveDocumentInfo</servlet-name>
  <servlet-class>edu.wustl.mir.mesaweb.rid.IHERetrieveDocumentInfo</servlet-class>
  <init-param>
     <param-name>logPath</param-name>
     <param-value>C:\mesa\logs\info_src.log</param-value>
  </init-param>
  <init-param>
    <param-name>jdbcDriverName</param-name>
    <param-value>com.microsoft.jdbc.sqlserver.SQLServerDriver</param-value>
  </init-param>
  <init-param>
    <param-name>jdbcConnectURL</param-name>
    <param-value>jdbc:microsoft:sqlserver://127.0.0.1:1433;DatabaseName=info_src;ServerName=C39HR61;User=ctn;Password=ctn</param-value>
  </init-param>
  <init-param>
     <param-name>imagePath</param-name>
     <param-value>C:\mesa\storage</param-value>
  </init-param>
 </servlet>

 <servlet-mapping>
  <servlet-name>InformationSource</servlet-name>
  <url-pattern>/IHERetrieveSummaryInfo</url-pattern>
 </servlet-mapping>

 <servlet-mapping>
  <servlet-name>IHERetrieveDocumentInfo</servlet-name>
  <url-pattern>/IHERetrieveDocument</url-pattern>
 </servlet-mapping>

</web-app>

